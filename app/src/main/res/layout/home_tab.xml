<?xml version="1.0" encoding="utf-8"?>
<com.erhuotu.rabbit.taoyouxian.widget.VerticalScrollView
    android:nestedScrollingEnabled="false"
    android:scrollbars="none"
    android:id="@+id/home_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hjm="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/home_tab_shop_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"/>
    <ImageView
        android:src="@mipmap/banner"
        android:id="@+id/home_tab_trusteeship_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75" />
    <LinearLayout
        android:background="@drawable/yuanjiao"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/school_rv"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_61"/>
        <ImageView
            android:src="@mipmap/icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_tab_recy"
                ></com.jcodecraeer.xrecyclerview.XRecyclerView>

    </LinearLayout>
    </LinearLayout>

</com.erhuotu.rabbit.taoyouxian.widget.VerticalScrollView>