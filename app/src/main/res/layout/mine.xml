<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
        <ImageView
            android:src="@mipmap/report"
            android:layout_centerHorizontal="true"
            android:id="@+id/mine_user_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70" />
        <LinearLayout
            android:id="@+id/mine_user_ll"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/mine_user_img"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mine_user_name"
                android:text="筱帝"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/mine_user_ll"
            android:text="国庆啊国庆啊加班啊加班啊"
            android:id="@+id/signature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/mine_lv"
        android:dividerHeight="2px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>