<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/sp_15" android:layout_centerInParent="true"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/post_book"
        android:id="@+id/fm_user_img"
        android:layout_margin="5dp"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/fm_user_img"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorblack"
            android:layout_gravity="center_vertical"
            android:text="筱帝"
            android:id="@+id/fm_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/sp_12"
            android:text="琴棋书画、吹拉弹唱、洗衣做饭样样精通"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/fm_user_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/fm_user_message_time"
        android:layout_alignTop="@id/fm_user_img"
        android:text="刚刚"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>