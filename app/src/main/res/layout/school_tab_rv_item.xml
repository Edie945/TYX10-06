<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp_15" android:background="@drawable/yuanjiao"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_292">
    <RelativeLayout
        android:id="@+id/user_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_img"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_margin="@dimen/dp_3"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44" />
    <LinearLayout

        android:id="@+id/user_ll"
        android:layout_toRightOf="@id/user_img"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:id="@+id/user_school"
            android:textSize="@dimen/sp_18"
            android:text="北京大学"
            android:textColor="@color/school_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/school_text"
            android:textSize="@dimen/sp_18"
            android:text=" — "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_name"
            android:textSize="@dimen/sp_18"
            android:text="李伟"
            android:textColor="@color/school_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_7"
        android:id="@+id/authentication_information_text"
        android:layout_toRightOf="@id/user_img"
        android:layout_below="@id/user_ll"
        android:text="认证信息"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/authentication_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/user_re"
        android:text="邽山，蒙水出焉，南流注于洋水，其中多黄贝①；蠃鱼，鱼身而鸟翼，音如鸳鸯，见则其邑大水。崦嵫山，山中有一种野兽，形状是马的身子而鸟的翅膀，有人的面孔而长着蛇的尾巴，很喜欢把人抱着举起，名称是孰湖。邽山，其上有兽焉其状如牛，猬毛，名曰穷奇，音如嗥狗，是食人。"
        android:textColor="@color/school_text"
        android:textSize="@dimen/sp_16"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/text_content"
        android:layout_width="@dimen/dp_332"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_below="@id/text_content"
        android:id="@+id/content_imgs_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@id/content_imgs_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_5"
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/report"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:text="举报"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <ImageView
            android:id="@+id/comment"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_28"
            android:src="@mipmap/comment"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
        <ImageView
            android:id="@+id/love"
            android:layout_toLeftOf="@id/comment"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_28"
            android:src="@mipmap/lovethis"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
        <ImageView
            android:id="@+id/share"
            android:layout_toLeftOf="@id/love"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_28"
            android:src="@mipmap/share"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
    </RelativeLayout>

</RelativeLayout>