<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/dp_5"
    android:background="@drawable/yuanjiao"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/dp_2"
            android:layout_centerVertical="true"
            android:id="@+id/school_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_toRightOf="@id/school_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/school_name"
                    android:text="北京大学"
                    android:textColor="@color/school_text"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/unfollow"
                    android:textSize="@dimen/sp_12"
                    android:text="【取消关注】"
                    android:textColor="@color/school_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/school_img"
                android:layout_below="@id/school_name"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:text="校友"
                    android:textColor="@color/school_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/school_people"
                    android:text="48387"
                    android:textColor="@color/school_text"
                    android:textSize="@dimen/sp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:text="人"
                    android:textColor="@color/school_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/school_users_img4"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <ImageView
                        android:layout_alignLeft="@id/school_users_img4"
                        android:layout_marginRight="@dimen/dp_10"
                        android:id="@+id/school_users_img3"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <ImageView
                        android:layout_alignLeft="@id/school_users_img3"
                        android:layout_marginRight="@dimen/dp_10"
                        android:id="@+id/school_users_img2"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <ImageView
                        android:layout_alignLeft="@id/school_users_img2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:id="@+id/school_users_img1"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                </RelativeLayout>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/right"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>