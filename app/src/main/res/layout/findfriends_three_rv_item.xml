<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp_15" android:gravity="center_vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:padding="@dimen/dp_10"
        android:id="@+id/findfriends_three_rv_item_user_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60" />
    <LinearLayout
        android:layout_toRightOf="@id/findfriends_three_rv_item_user_img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/colorblack"
            android:textSize="@dimen/sp_18"
            android:text="昵称"
            android:id="@+id/findfriends_three_rv_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="认证信息"
            android:textSize="@dimen/sp_13"
            android:id="@+id/findfriends_three_rv_item_user_authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/addfriend"
            android:id="@+id/add_friends"
            android:layout_width="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_30" />

        <ImageView
            android:src="@mipmap/addattention"
            android:id="@+id/add_attention"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>
</RelativeLayout>